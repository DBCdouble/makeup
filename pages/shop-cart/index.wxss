@import "./shopping-item/index.wxss";
page{
  background-color: #F5F5F5;
}
.cart-container{
  background-color: #F5F5F5;
}
.title-box{
   position: relative;
   display: flex;
   align-items: center;
   justify-content: center;
   background-color: #FFFFFF;
   color: #E31436;
   font-size: 36rpx;
   line-height: 70rpx;
   padding: 50rpx 24rpx 10rpx;
   font-weight:600;
   border-bottom:1px solid #F5F5F5;
 }
 .title-text{

 }
.edit-box{
  text-align: right;
  color: #999;
}
.edit-box .text{
  font-size: 30rpx;
  height: 65rpx;
  line-height: 65rpx;
  margin-right: 24rpx;
}
.shoplist{
  background-color: #FFFFFF;
  padding-bottom: 100rpx;
}
.accounts-box{
  position: fixed;
  z-index: 10;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  box-shadow: 0 5px 10px 5px #666666;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #FFFFFF;
  font-size: 30rpx;
}
.all-check{
  flex: 1;
  display:flex;
  flex-direction:row;
  margin-left: 20rpx;
}
.all-check .check-box{
  width: 40rpx;
  height: 40rpx;
  overflow: hidden;
}
.all-check .check-box .check{
  width: 40rpx;
  height: 40rpx;
}
.all-check .check-text{
  margin-left: 20rpx;
}
.total{
  flex: 2;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.total .total-text{
  font-weight: bold;
}
.total .total-price{
  margin-left: 20rpx;
  color:#E41438;
}
.account-btn{
  flex:1.5;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #E41438;
  color: #FFFFFF;
}