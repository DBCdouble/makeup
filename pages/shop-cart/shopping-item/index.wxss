.container{
  width:100%;
  overflow:hidden;

}
.inner{
  display: flex;
  width:870rpx;
  transition:margin-left 0.2s ease-in-out;
}
.del{
  text-align: center;
  width: 120rpx;
  height: 200rpx;
  line-height: 200rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  background-color: #E41438;
}
.item-container{
  display: flex;
  width: 100%;
  flex-direction: row;
  padding: 20rpx 0;
  margin: 0 20rpx;
  border-bottom: 1px solid #F5F5F5;
  overflow: hidden;
  background-color: #FFFFFF;
}
.item-check{
  width: 35rpx;
}
.item-check .gougou{
  width: 35rpx;
  height: 35rpx;
  margin-top: 62.5rpx;
}
.item-img-box{
  width: 160rpx;
  height: 160rpx;
  overflow:hidden;
  border: 1px solid #F5F5F5;
  margin-left: 25rpx;
}
.item-img-box .item-img{
  width: 160rpx;
  height: 160rpx; 
}
.item-info{
  width: 450rpx;
  margin-left: 30rpx;
  font-size:28rpx;
}
.item-info .item-top{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color:#272727;
}
.item-bottom{
  width: 450rpx;
  display: flex;
  flex-direction: row;
  margin-top: 75rpx;
}
.item-bottom .item-price{
  flex:1;
  color: #E41438;
  overflow: hidden;
  align-self:flex-end;
}
.item-bottom .item-quantity{
  display: flex;
  flex-direction: row;
  overflow: hidden;
  align-items: center;
}
.item-bottom .item-quantity .disabled{
  color:#F5F5F5;
}
.item-bottom .item-quantity .count{
  width: 55rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  font-size: 32rpx;
}
.item-bottom .item-quantity .count:nth-of-type(1){
  border: 1px solid #F5F5F5;
  border-right: 0px;
}
.item-bottom .item-quantity .count:nth-of-type(2){
  border: 1px solid #F5F5F5;
}
.item-bottom .item-quantity .count:nth-of-type(3){
  border: 1px solid #F5F5F5;
  border-left: 0px;
}