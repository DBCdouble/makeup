.detail-container{
  min-height: 100%;
  padding-bottom: 49rpx;
}
swiper{
  width: 100%;
  height: 375px;
  overflow: hidden;
}
swiper-item{
  width: 100%;
  height: 375px;
  overflow: hidden;
}
.img{
  width: 100%;
  height: 375px;
}
.goods-price{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 55px;
  color:#FFFFFF;
  font-size: 16px;
  background: linear-gradient(right, #E31436, #F56855);
  background: -moz-linear-gradient(right, #E31436, #F56855);
  background: -webkit-linear-gradient(left, #E31436, #F56855);
  background: -o-linear-gradient(to right, #E31436, #F56855);
}
.goods-price-left{
  flex:1;
  height: 55px;
  line-height: 55px;
  margin-left: 22px;
}
.price{
  display: inline-block;
  font-size: 22px;
  font-weight: bold;
}
.goods-title{
  font-size:16px;
  font-weight: bold;
  margin: 19px 26px 10px 14px;
  color:#000000;
}
.goods-weight{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 49px;
  line-height: 49px;
  margin-left:14px;
  font-size: 12px;
}
.country{
  flex:1;
}
.country-img{
  width: 12px;
  height: 12px;
}
.country-name{
  display: inline-block;
}
.weight{
  flex:3;
}
.footer-box{
  display: flex;
  /* flex-direction: row; */
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 49px;
  line-height: 49px;
  text-align: center;
  font-size: 10px;
  color: #434343;
  background-color:#FFFFFF;
}
.collect{
  flex:1;
  height: 49px;
}
.go-shop-cart{
  flex:1;
  height: 49px;
}
.join-shop-cart{
  flex:3;
  height: 49px;
  line-height: 49px;
  font-size: 16px;
  color: #FFFFFF;
  background-color:#E31436;
}